<br>
<div class="title is-3">Únete a la mejor red de turnos de la UC</div>
<div class="columns" align="center">
    <% choices = ["cc", "sj", "lc", "co", "meones"] %>
    <% p1, p2, p3, p4 = choices.sample(4) %>
    <div class="column is-offset-1">
      <div class="columns features" style="height: 50%;">
        <div class="column" id="parallax-<%=p1%>" style="background-size: 600px 700px; background-position: left center;">
        </div>
        <div class="column" id="parallax-<%=p2%>" style="background-size: 600px 700px; background-position: center center;">
        </div>
      </div>
      <div class="columns features" style="height: 50%;">
        <div class="column" id="parallax-<%=p3%>" style="background-size: 600px 700px; background-position: left center; border-bottom: 20px solid hsl(48, 100%, 67%); border-top-color: transparent;">
        </div>
        <div class="column" id="parallax-<%=p4%>" style="background-size: 600px 700px; background-position: center center; border-bottom: 20px solid hsl(48, 100%, 67%); border-top-color: transparent;">
        </div>
      </div>
    </div>
    <div class="column is-1">
    </div>
    <div class="column is-one-quarter" align="left">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="column box">
          <%= render "users/shared/error_messages", resource: resource %>
          <div class="title is-4" align="center">Regístrate</div>

          <div class="ml-3", class="field">
            <h3 class="label"> Nombre </h3>
            <%= f.text_field :username, autofocus: true, autocomplete: "username", :class=>"input mb-4", :type=>"text", :placeholder=>"Nombre" %>
          </div>

          <div class="ml-3", class="field">
            <h3 class="label"><%= f.label :email %></h3>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>"input mb-4", :type=>"text", :placeholder=>"Email" %>
          </div>
        </div>
        <div class="column box">
          <div class="ml-3", class="field">
            <h3 class="label"> Contraseña </h3>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caracteres mínimos)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" , :class=>"input mb-4", :placeholder=>"Contraseña" %>
          </div>
          <div class="ml-3", class="field">
            <h3 class="label"> Confirmar Contraseña </h3>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", :class=>"input mb-4", :placeholder=>"Contraseña"  %>
          </div>
        </div>

        <div align="center">
          <div class="ml-3", class="actions">
            <%= f.submit "Únete", :class=> "button is-info mb-2 mt-0" %>
          </div>
          <div class="ml-3">
            <%= render "users/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="column is-1">
    </div>
</div>
